<h1>Listing ships</h1>

<table>
  <tr>
    <th>Shipping line</th>
    <th>Load capacity</th>
    <th>Volume capacity</th>
    <th>Ship make</th>
    <th>Ship model</th>
    <th>Ship model year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ships.each do |ship| %>
  <tr>
    <td><%= ship.shipping_line_id %></td>
    <td><%= ship.load_capacity %></td>
    <td><%= ship.volume_capacity %></td>
    <td><%= ship.ship_make %></td>
    <td><%= ship.ship_model %></td>
    <td><%= ship.ship_model_year %></td>
    <td><%= link_to 'Show', ship %></td>
    <td><%= link_to 'Edit', edit_ship_path(ship) %></td>
    <td><%= link_to 'Destroy', ship, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

